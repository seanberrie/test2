<div class="container">
<h1 class="jumbotron text-center">Wacky Widgets</h1>
<hr>
<% if @widgets.count < 1 %>
<h3 class="text-center">No Widgets Exist</h3>
<% else %>
<table style="width:100%">
  <tr>
    <th>Description</th>
    <th>Quantity</th> 
    <th>Remove</th>
  </tr>
  <hr>
  <% @widgets.each do |w| %>
  <tr>
    <td><a href="/widgets/<%= w.id %>"> <%= w.description %></a></td>
    <td><%= w.quantity %></td> 
    <td><%= link_to "X", widget_path(w.id), method: :delete, data: { confirm: "Are you sure you want to delete this widget?"}, class: "btn btn-xs btn-danger" %></td>
  </tr>
  <% end %>
  </table>
  <% end %>
  
</div>
